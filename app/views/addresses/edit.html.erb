<h3>Edit <%= @address.nickname %> Address</h3>
<%= form_with model: [@user,@address], local: true do |f| %>
  <%= f.label :nickname %>
  <%= f.text_field :nickname, placeholder: @address.nickname %>
  <%= f.label :street %>
  <%= f.text_field :street, placeholder: @address.street %>
  <%= f.label :city %>
  <%= f.text_field :city, placeholder: @address.city %>
  <%= f.label :state %>
  <%= f.text_field :state, placeholder: @address.state %>
  <%= f.label :zip %>
  <%= f.text_field :zip, placeholder: @address.zip %>
<%= f.submit 'Update Address' %>
<% end %>
