<center>
<h3>All User Addresses</h3>
  <% @addresses.each do |address| %>
    <section id="address-<%= address.id %>">
    <br />Address Nickname: <%= address.nickname %>
    <br /><%= address.street %>
    <br /><%= address.city %>, <%= address.state %> <%= address.zip %>
    <p><% if !address.has_shipped_orders? %>
      <%= link_to "Edit #{address.nickname} Address", edit_address_path(address.id) %>
      <%= link_to "Delete #{address.nickname} Address", address_path(address.id), method: :delete %>
    <% end %></p>
    </section>
  <% end %>
</center>
