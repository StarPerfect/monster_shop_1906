<center>
  <h1>Become a User of the Little Shop of Monsters</h1>
  <%= form_tag '/users', method: :post do %>
  <%= text_field_tag :name, nil, placeholder: 'Name' %>
  <%= text_field_tag :address, nil, placeholder: 'Address'  %>
  <%= text_field_tag :city, nil, placeholder: 'City'  %>
  <%= text_field_tag :state, nil, placeholder: 'State'  %>
  <%= text_field_tag :zip, nil, placeholder: 'Zip'  %>
  <%= text_field_tag :email, nil, placeholder: 'Email'  %>
  <%= text_field_tag :password, nil, placeholder: 'Password'  %>
  <%= text_field_tag :password_confirmation, nil, placeholder: 'password_confirmation Password'  %>
  <%= submit_tag 'Save Me' %>
  <% end %>
</center>
