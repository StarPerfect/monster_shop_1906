<% if @merchant %>
  <h1><%= link_to @merchant.name, "/merchants/#{@merchant.id}"%><span> Items</span></h1>
  <p align="center"><%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new" %></p>
<% else %>
  <h1>All Items</h1>
<% end %>
<section class="grid-container">
  <% @items.each do |item| %>
  <% if item.active? %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <section id= "item-<% item.id %>" ><%= link_to image_tag(item.image), "/items/#{item.id}" %></section>
      <p> <%= item.description unless @merchant%> </p>
      <p>Price: <%=number_to_currency(item.price) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <% if !@merchant %>
      <% end %>
      <% if item.active? %>
        <p>Active</p>
      <% else %>
        <p>Inactive</p>
      <% end %>
    </section>
    <% else %>
    <% end %>
    <% end %>
  </section>


<section id="stats">
    <h2><b>Item Stats By Popularity</b></h2>

    <p><i>Best</i></p>
    <% @item_stats_top.each do |item, quantity| %>
     Name: <%= item %>
     Sold: <%= quantity %>
     <% end %>
     <br>
     <br>
     <p><i>Worst</i></p>
     <% @item_stats_bottom. each do |item, quantity| %>
       Name: <%= item %>
       Sold: <%= quantity %>
     <% end %>
</section>
